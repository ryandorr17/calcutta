<h1>Create a New Auction</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@auction) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control'  %>

      <%= f.label :event %>
      <%= f.number_field :event_id, class: 'form-control'  %>

      <%= f.label :number_participants %>
      <%= f.number_field :number_participants, class: 'form-control' %>

      <%= f.label :start %>
      <%= f.date_field :start, class: 'form-control' %>

      <%= f.label :soft_cap %>
      <%= f.number_field :soft_cap, class: 'form-control' %>

      <%= f.submit "Create an auction", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
